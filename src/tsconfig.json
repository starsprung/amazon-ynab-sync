    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2020", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../lib",
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2020"
  },
  "references": [{ "path": "../" }],
  "exclude": ["**/*.test.ts"]
}
